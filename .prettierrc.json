{
  "semi": false,
  "tabWidth": 2,
  "printWidth": 100,
  "endOfLine": "auto",
  "singleQuote": true,
  "proseWrap": "never",
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "singleAttributePerLine": true,
  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-svelte"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    },
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": "*.mdx",
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ]
}
