{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "vcs": {
    "root": ".",
    "enabled": true,
    "clientKind": "git"
  },
  "files": {
    "include": [
      "*.ts",
      "*.js",
      "*.cjs",
      "*.tsx",
      "*.d.ts",
      "*.json",
      "*.jsonc"
    ],
    "ignoreUnknown": true,
    "ignore": ["node_modules", "dist", "_"]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true,
    "include": [
      "*.ts",
      "*.js",
      "*.mjs",
      "*.cjs",
      "*.jsx",
      "*.tsx",
      "*.d.ts",
      "*.d.cts",
      "*.d.mts",
      "*.json",
      "*.jsonc"
    ],
    "ignore": ["dist", "biome.json", "node_modules", "_"]
  },
  "linter": {
    "include": [
      "*.ts",
      "*.js",
      "*.mjs",
      "*.cjs",
      "*.jsx",
      "*.tsx",
      "*.d.ts",
      "*.json",
      "*.d.cts",
      "*.d.mts",
      "*.jsonc"
    ],
    "ignore": ["node_modules", "dist", "_"],
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "all": true,
        "noNamespace": "off",
        "useFragmentSyntax": "off",
        "useBlockStatements": "off",
        "useNamingConvention": "off",
        "useShorthandArrayType": "off",
        "useSelfClosingElements": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "a11y": {
        "all": true,
        "noSvgWithoutTitle": "off",
        "noDistractingElements": "off"
      },
      "nursery": {
        "all": true,
        "useAwait": "off",
        "noUnusedImports": "off"
      },
      "performance": {
        "all": true,
        "noAccumulatingSpread": "off"
      },
      "correctness": {
        "all": true,
        "noUnusedVariables": "off",
        "noUndeclaredVariables": "off"
      },
      "suspicious": {
        "all": true,
        "noConsoleLog": "off",
        "noExplicitAny": "off",
        "noEmptyInterface": "off"
      },
      "complexity": {
        "all": true,
        "noBannedTypes": "off",
        "useLiteralKeys": "off",
        "noUselessFragments": "off",
        "noExcessiveCognitiveComplexity": "off"
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "javascript": {
    "globals": ["NodeJS"],
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "lineWidth": 100,
      "indentWidth": 2,
      "indentStyle": "space",
      "quoteStyle": "single",
      "trailingComma": "none",
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  }
}
