---
/**
 * When you need to display the result of a JS/TS function in markdown/mdx
 * Since you can't call a function in markdown, you can use this component to display the result of the function
 * @example
 * ```mdx
 * import { multiply } from '#/utilities.ts'
 *
 * <FunctionResult result={multiply(2, 3)} /> // 6
 *
 * <FunctionResult result={multiply(2, 3)} asInlineCode /> // `<code>6</code>`
 * ```
 */

interface Props {
  result: string | number | boolean
  asInlineCode?: boolean
}

const { result, asInlineCode = false } = Astro.props
const output = asInlineCode ? `<code>${result}</code>` : result
---

<Fragment set:html={output} />


