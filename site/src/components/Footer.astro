---
const menuItems = [
  {
    url: "/blog",
    name: "Blog"
  },
  {
    url: "/docs",
    name: "Docs"
  },
  {
    url: "/team",
    name: "Team"
  },
  {
    url: "/brand-kit",
    name: "Brand Kit"
  },
  {
    url: "https://discord.union.build",
    name: "Discord"
  },
  {
    url: "https://x.com/union_build",
    name: "X.com"
  },
  {
    url: "https://github.com/unionlabs/union",
    name: "GitHub"
  }
]

function isInternal(menuItem: { url: string }): boolean {
  return menuItem.url[0] === "/"
}
---

<footer
  class="font-jetbrains flex flex-col justify-center font-normal items-center text-[8px] sm:text-sm md:text-xl gap-4 py-8 pt-36"
>
  <ul class="flex gap-8 list-none">
    {
      menuItems.map(menuItem => (
        <li>
          <a
            href={menuItem.url}
            target={isInternal(menuItem) ? '' : '_blank'}
            rel={isInternal(menuItem) ? '' : 'noopener noreferrer'}
            class="text-normal uppercase"
          >
            {menuItem.name}
          </a>
        </li>
      ))
    }
  </ul>
  <p class="text-center block text-neutral-300">&copy; Union Labs</p>
</footer>
