---
import { Icon } from "@astrojs/starlight/components"
import { socialLinks } from "#/lib/constants/socials.ts"
import IntroHeading from "#/components/typography/IntroHeading.astro";
---

<section class="flex flex-col">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-px">
    {
      socialLinks.map(socialLink => (
        <a
          href={socialLink.href}
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-col flex-1 p-7 text-center w-full"
        >
          <Icon name={socialLink.icon} class="mx-auto" size="2.5rem" />
          <div class="mt-4">
            <span class="mt-16 border-b-[1px] uppercase border-white text-semibold">
              {socialLink.cta} -&gt;
            </span>
          </div>
        </a>
      ))
    }
  </div>
</section>
