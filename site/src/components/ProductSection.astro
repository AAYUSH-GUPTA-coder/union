---
import Spline, { type Props as SplineProps } from "#/components/Spline.astro"

interface Props extends SplineProps {
  name: string
  link: string
  description: string
}

const {
  name,
  hint,
  link,
  model,
  width,
  height,
  unloadable,
  description,
  loadingAnimType,
  backgroundColor,
  loading = "auto",
  eventsTarget = "global"
} = Astro.props
---

<div
  class="flex flex-col text-left from-black bg-gradient-to-b to-neutral-950 rounded border border-[#1f1f1f] shadow-lg"
>
  <div class="-mt-16 -mb-4">
    <Spline
      hint={hint}
      model={model}
      width={width}
      height={height}
      loading={loading}
      unloadable={unloadable}
      eventsTarget={eventsTarget}
      loadingAnimType={loadingAnimType}
      backgroundColor={backgroundColor}
    />
  </div>
  <div class="flex flex-col flex-1 overflow-hidden">
    <h3 class="mb-1 text-3xl px-4">{name}</h3>
    <p class="text-gray-400 flex-1 px-4">{description}</p>
    <a class="block bg-neutral-900 p-4 mt-2 text-white font-semibold" href={link}
      >Read More {'->'}
    </a>
  </div>
</div>
