{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "types": [
      "node",
      "@cloudflare/workers-types",
      "typed-query-selector/strict"
    ]
  },
  "include": ["src/**/*", "public/**/*"],
  "files": [
    ".eslintrc.cjs",
    ".prettierrc.mjs",
    "astro.config.ts",
    "svelte.config.js",
    "tailwind.config.ts",
    "markdown.config.ts"
  ],
  "exclude": ["dist", "node_modules", "_"]
}
